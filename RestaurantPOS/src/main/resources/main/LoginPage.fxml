<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginPageController">
   <children>
      <AnchorPane prefHeight="700.0" prefWidth="500.0" styleClass="leftPane" stylesheets="@../Styles/LoginStyles.css">
         <children>
            <TextField fx:id="showPasswordField" disable="true" layoutX="74.0" layoutY="212.0" prefHeight="26.0" prefWidth="250.0" promptText="Password" styleClass="loginFields" stylesheets="@../Styles/LoginStyles.css" visible="false">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <CheckBox fx:id="showPasswordCheckBox" alignment="CENTER" layoutX="258.0" layoutY="417.0" mnemonicParsing="false" nodeOrientation="RIGHT_TO_LEFT" prefHeight="26.0" prefWidth="115.0" styleClass="showPassword" text="Show Password" textFill="#363753" />
            <Label alignment="CENTER" layoutX="75.0" layoutY="176.0" prefHeight="74.0" prefWidth="350.0" text="ENTER INFORMATION TO CONTINUE" textFill="#363753">
               <font>
                  <Font name="System Bold" size="19.0" />
               </font>
            </Label>
            <Button fx:id="loginButton" alignment="CENTER" graphicTextGap="5.0" layoutX="254.0" layoutY="476.0" mnemonicParsing="false" prefHeight="46.0" prefWidth="115.0" styleClass="continueButton" stylesheets="@../Styles/LoginStyles.css" text="Login">
               <font>
                  <Font size="20.0" />
               </font>
               <graphic>
                  <FontIcon fx:id="loginIcon" iconLiteral="win10-lock" iconSize="25" />
               </graphic>
            </Button>
            <TextField fx:id="usernameField" layoutX="124.0" layoutY="310.0" prefHeight="26.0" prefWidth="250.0" promptText="Username" styleClass="loginFields" stylesheets="@../Styles/LoginStyles.css">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <PasswordField fx:id="passwordField" layoutX="124.0" layoutY="374.0" prefHeight="26.0" prefWidth="250.0" promptText="Password" styleClass="loginFields" stylesheets="@../Styles/LoginStyles.css">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </PasswordField>
            <CheckBox fx:id="rememberMeCheckBox" layoutX="129.0" layoutY="487.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="115.0" styleClass="showPassword" text="Remember Me" textFill="#363753" />
            <Label fx:id="messageLabel" alignment="CENTER" layoutX="75.0" layoutY="235.0" prefHeight="74.0" prefWidth="350.0" textFill="RED">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="welcomePane" layoutX="500.0" prefHeight="700.0" prefWidth="500.0" styleClass="rightPane" stylesheets="@../Styles/LoginStyles.css">
         <children>
            <FontIcon iconColor="#fcfcfc00" iconLiteral="win10-organization" iconSize="200" layoutX="151.0" layoutY="374.0" stroke="#fefefe" strokeWidth="3.0" />
            <Label alignment="CENTER" layoutX="145.0" layoutY="414.0" prefHeight="74.0" prefWidth="211.0" text="WELCOME" textFill="#fefefe">
               <font>
                  <Font name="System Bold" size="40.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
