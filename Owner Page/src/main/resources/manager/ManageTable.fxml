            <Label layoutX="13.0" layoutY="71.0" text="Table Number:">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="numberField" layoutX="155.0" layoutY="71.0" prefWidth="180.0">
