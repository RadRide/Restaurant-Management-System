               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <Label fx:id="messageLabel" alignment="CENTER" layoutX="8.0" layoutY="14.0" prefHeight="25.0" prefWidth="334.0" text="ALL FIELDS MUST BE FILLED!" textFill="RED" visible="false">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="OK" />
